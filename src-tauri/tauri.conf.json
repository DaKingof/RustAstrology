{
  "$schema": "https://schema.tauri.app/v2/schema.json",
  "productName": "Rust Astrology",
  "version": "0.1.0",
  "identifier": "com.rustastrology.app",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "trunk build --release",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Rust Astrology",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ]
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png"
      ]
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Rust Astrology",
        "width": 1200,
        "height": 800
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}