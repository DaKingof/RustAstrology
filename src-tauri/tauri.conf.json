{
  "$schema": "https://schema.tauri.app/v2/schema.json",
  "productName": "Rust Astrology",
  "version": "0.1.0",
  "identifier": "com.rustastrology.app",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "trunk build --release",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Rust Astrology",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}