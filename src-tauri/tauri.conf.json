{
  "$schema": "https://schema.tauri.app/v1/schema.json",
  "build": {
    "distDir": "../dist",
    "beforeBuildCommand": "trunk build --release",
    "devPath": "http://localhost:8080",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Rust Astrology",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.rustastrology.app",
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Rust Astrology",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "allowlist": {
      "all": true
    }
  }
}